# partition the ephemeral disk
disk_setup:
  /dev/vdb:
    type: 'mbr'
    layout:
      - [25,82] # 1/4 is swap
      - 25      # 1/4 is /tmp
      - 50      # 1/2 is /cvmfs
    overwrite: True

fs_setup:
    - label:  swap
      filesystem: 'swap'
      device: '/dev/vdb1'
    - label: tmp
      filesystem: 'ext4'
      device: '/dev/vdb2'
      partition: 'auto'
    - label: cvmfs
      filesystem: 'ext4'
      device: '/dev/vdb3'
      partition: 'auto'

mounts:
  - [ "/dev/vdb1", "none",  "swap", "sw", "0", "0" ]
  - [ "/dev/vdb2", "/tmp",  "ext4", "defaults", "0", "0" ]
  - [ "/dev/vdb3", "/var/lib/cvmfs",  "ext4", "defaults", "0", "0" ]

